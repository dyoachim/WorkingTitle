<!DOCTYPE html>
<html>
<head>
  <title>WorkingTitle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>




  <nav>
    <ul>
      <li><%= link_to 'Home', root_path %></li>
      <li><%= render 'shared/search' %></li>
      <div class='login_nav'>
        <% if logged_in? %>

          <li><%= link_to current_user.first_name, user_path(current_user) %></li>
          <li><%= link_to "account settings", edit_user_path(current_user) %></li>
          <li><%= form_tag('/logout') do %></li>
            <li><%= submit_tag "Logout" %></li>
          <% end %>
        <% else %>
          <li><a href="/users/new">New User?</a></li>
          <li><%= form_tag('/login') do %></li>
            <li><%= text_field_tag "email", nil, placeholder: "Email" %></li>
            <li><%= password_field_tag "password", nil, placeholder: 'Password' %></li>
            <li><%= submit_tag "Login" %></li>
          <% end %>

        <% end %>
      </div>
		</ul>
	</nav>
  <%= yield %>
</body>
</html>
